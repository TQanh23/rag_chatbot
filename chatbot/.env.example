# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=1
ALLOWED_HOSTS=127.0.0.1,localhost

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=rag_chatbot

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=test_collection

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TIMEOUT=30
GEMINI_MAX_ATTEMPTS=3
GEMINI_INITIAL_MAX_TOKENS=512
GEMINI_MAX_OUTPUT_TOKENS=4096

# Safety and Context Settings
SAFE_CONTEXT_CHARS=3000

# Retrieval Improvements
# Enable query expansion for better recall (generates query variants using LLM)
ENABLE_QUERY_EXPANSION=true

# Enable semantic chunking (respects document structure like chapters, sections)
USE_SEMANTIC_CHUNKING=true

# Embedding Model Configuration (Vietnamese RoBERTa-based, 768-dim)
EMBEDDING_MODEL=dangvantuan/vietnamese-embedding
EMBEDDING_DIM=768
